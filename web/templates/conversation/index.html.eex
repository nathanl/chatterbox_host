<h1>Conversations</h1>

<div id="chatterbox-dashboard">
  <%= Enum.map(@conversations, fn ({category, conversations}) -> %>
    <div class="conversation-category">
      <h2><%= category %></h2>
      <%= Enum.map(conversations, fn (conversation) -> %>
        <div class="conversation">
          <%= link("ðŸ’¬ðŸ’¬", to: "/conversations/#{conversation.id}") %>
          <span class="user-name"><%= raw(conversation.first_message.sender_name) %></span>
          <span class="opening-message"><%= raw(conversation.first_message.content) %></span>
        </div>
      <% end) %>
    </div>
  <% end) %>
</div>
